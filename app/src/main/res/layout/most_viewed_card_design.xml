<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp"
        >


        <ImageView
            android:id="@+id/ms_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/mcdonalds"
            android:scaleType="centerCrop"/>
        
        <TextView
            android:id="@+id/ms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="McDonalds"
            android:textSize="20sp"
            android:fontFamily="@font/muli_bold"
            android:layout_toRightOf="@+id/ms_image"
            android:layout_marginLeft="10dp"/>
        
        <RatingBar
            android:id="@+id/ms_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/ms_title"
            android:layout_toRightOf="@+id/ms_image"
            />

        <TextView
            android:id="@+id/ms_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gkkjfkj kjfkjkfj kjgfkjkjfk kirijigfoiji ijflj"
            android:layout_below="@+id/ms_rating"
            android:layout_toRightOf="@+id/ms_image"
            android:padding="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>